# ============================================================================
# AFFILIFY TIKTOK CONTENT DISTRIBUTION SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================================================
# This file contains all the credentials and configuration for the 7-Pillar
# Diamond Factory system. Copy this to .env and fill in your actual values.
# ============================================================================

# ----------------------------------------------------------------------------
# MULTILOGIN CONFIGURATION
# ----------------------------------------------------------------------------
# Cloud API (for profile search and management)
MULTILOGIN_API_BASE_URL=https://api.multilogin.com
MULTILOGIN_EMAIL=your_email@example.com
MULTILOGIN_PASSWORD=your_password_here

# Automation token (recommended for higher rate limits and longer lifetime)
# Leave empty to use regular 30-min token
MULTILOGIN_AUTOMATION_TOKEN=

# Local Launcher API (for launching existing profiles)
# This is the local API that runs on your machine when MultiLogin is open
# Default URL: https://launcher.mlx.yt:45001
MULTILOGIN_LAUNCHER_URL=https://launcher.mlx.yt:45001

# Profile Mode: "manual", "existing", or "create"
# - "manual": Use CSV file for profile mapping (recommended for profiles split across multiple accounts)
# - "existing": Use API to search for existing profiles (requires API access)
# - "create": Create new profiles via API
MULTILOGIN_PROFILE_MODE=manual

# CSV Mapping File (only used in "manual" mode)
PROFILE_MAPPING_CSV=data/profile_mapping.csv

# ----------------------------------------------------------------------------
# NODEMAVEN PROXY CONFIGURATION
# ----------------------------------------------------------------------------
# The proxy credentials are loaded from data/nodemaven_proxies.txt
# This file should contain one proxy per line in the format:
# host:port:username:password

# ----------------------------------------------------------------------------
# GEMINI AI CONFIGURATION
# ----------------------------------------------------------------------------
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# ----------------------------------------------------------------------------
# TIKTOK ACCOUNT CONFIGURATION
# ----------------------------------------------------------------------------
# Number of TikTok accounts to manage (must match number of proxies)
TIKTOK_ACCOUNT_COUNT=60

# ----------------------------------------------------------------------------
# CONTENT PROCESSING CONFIGURATION
# ----------------------------------------------------------------------------
# Directory where raw video files are uploaded
RAW_VIDEO_INPUT_DIR=/home/ubuntu/affilify_tiktok_system/data/raw_videos

# Directory where processed videos are stored
PROCESSED_VIDEO_OUTPUT_DIR=/home/ubuntu/affilify_tiktok_system/data/processed_videos

# Video processing settings
VIDEO_TARGET_ASPECT_RATIO=9:16
VIDEO_TARGET_RESOLUTION=1080x1920
VIDEO_MIN_DURATION_SECONDS=15
VIDEO_MAX_DURATION_SECONDS=60

# ----------------------------------------------------------------------------
# POSTING SCHEDULE CONFIGURATION
# ----------------------------------------------------------------------------
# Daily posting limit per account (100 is the safe, sustainable limit)
DAILY_POSTS_PER_ACCOUNT=100

# Posting time window (24-hour format)
POSTING_START_HOUR=6
POSTING_END_HOUR=22

# Randomization settings (in minutes)
MIN_DELAY_BETWEEN_POSTS=5
MAX_DELAY_BETWEEN_POSTS=30

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
DATABASE_PATH=/home/ubuntu/affilify_tiktok_system/data/affilify_system.db

# ----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=/home/ubuntu/affilify_tiktok_system/logs/system.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ----------------------------------------------------------------------------
# TREND FORECASTING CONFIGURATION
# ----------------------------------------------------------------------------
# Enable/disable trend scraping
ENABLE_TREND_SCRAPING=true

# Trend scraping interval (in hours)
TREND_SCRAPING_INTERVAL_HOURS=6

# Number of trending hashtags to track
TRENDING_HASHTAGS_COUNT=20

# Number of trending sounds to track
TRENDING_SOUNDS_COUNT=10

# ----------------------------------------------------------------------------
# ANALYTICS CONFIGURATION
# ----------------------------------------------------------------------------
# Enable/disable performance tracking
ENABLE_ANALYTICS=true

# Analytics scraping delay (hours after posting)
ANALYTICS_SCRAPING_DELAY_HOURS=24

# ----------------------------------------------------------------------------
# OPTIMIZATION CONFIGURATION
# ----------------------------------------------------------------------------
# Enable/disable daily optimization
ENABLE_DAILY_OPTIMIZATION=true

# Optimization run time (24-hour format)
OPTIMIZATION_RUN_HOUR=3

# ----------------------------------------------------------------------------
# REPORTING CONFIGURATION
# ----------------------------------------------------------------------------
# Enable/disable daily reports
ENABLE_DAILY_REPORTS=true

# Report delivery email (leave empty to save to file only)
REPORT_EMAIL=

# Report delivery time (24-hour format)
REPORT_DELIVERY_HOUR=8

# ----------------------------------------------------------------------------
# SAFETY AND ERROR HANDLING
# ----------------------------------------------------------------------------
# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Retry delay (in seconds)
RETRY_DELAY_SECONDS=5

# Enable/disable automatic account retirement on ban
AUTO_RETIRE_BANNED_ACCOUNTS=true

# ----------------------------------------------------------------------------
# ADVANCED SETTINGS
# ----------------------------------------------------------------------------
# Browser automation timeout (in seconds)
BROWSER_TIMEOUT_SECONDS=60

# Enable headless mode for browser automation
HEADLESS_MODE=true

# Enable screenshots on errors
SCREENSHOT_ON_ERROR=true

# Screenshot directory
SCREENSHOT_DIR=/home/ubuntu/affilify_tiktok_system/logs/screenshots
